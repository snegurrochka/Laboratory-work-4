{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Проект з моніторингу",
  "type": "object",
  "properties": {
    "Скульптор-користувач": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 15,
          "pattern": "^[A-Za-zА-Яа-яЁёІіЇїЄє]{1,15}$"
        },
        "surname": {
          "type": "string",
          "maxLength": 15,
          "pattern": "^[A-Za-zА-Яа-яЁёІіЇїЄє]{1,15}$"
        },
        "phone_number": {
          "type": "string",
          "pattern": "^\\+\\d{12}$"
        },
        "profession": {
          "type": "string"
        }
      },
      "required": ["name", "surname", "phone_number"]
    },
    "Система моніторингу температури": {
      "type": "object",
      "properties": {
        "currentTemperature": {
          "type": "string",
          "pattern": "^\\+\\d{1,2}\\.\\d$"
        },
        "currentHumidity": {
          "type": "string",
          "pattern": "^\\d{1,3}%$"
        }
      },
      "required": ["currentTemperature", "currentHumidity"]
    },
    "Фінансовий консультант": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 15,
          "pattern": "^[A-Za-zА-Яа-яЁёІіЇїЄє]{1,15}$"
        },
        "surname": {
          "type": "string",
          "maxLength": 15,
          "pattern": "^[A-Za-zА-Яа-яЁёІіЇїЄє]{1,15}$"
        },
        "phone_number": {
          "type": "string",
          "pattern": "^\\+\\d{12}$"
        }
      },
      "required": ["name", "surname", "phone_number"]
    },
    "Освітні ресурси": {
      "type": "object",
      "properties": {
        "materialList": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "maxLength": 50,
                "pattern": "^[A-Za-zА-Яа-яЁёІіЇїЄє0-9 ]{1,50}$"
              },
              "type": {
                "type": "string",
                "enum": ["відео", "стаття"]
              },
              "link": {
                "type": "string",
                "pattern": "^(http|https)://[a-zA-Z0-9./]+$"
              }
            },
            "required": ["name", "type", "link"]
          }
        }
      },
      "required": ["materialList"]
    }
  },
  "required": ["Скульптор-користувач", "Система моніторингу температури", "Освітні ресурси", "Фінансовий консультант"]
}

